# A small ttd (Token- and Type-Definitions) file defining the mathematical regular expression notation

# TOKENS
lit := "[^()+*\\]+\\[^]"
(   := "\("
)   := "\)"
[   := "\["
]   := "\]"
^   := "\^"
-   := "\-"
or   := "\|"
*   := "\*"

# TYPES
re  ::= ::sum re2 or re | ::nl re2
re2 ::= ::seq re3 re2  | ::nl re3
re3 ::= ::rep re3 *    | ::nl re4
re4 ::= ::unit ( ) | ::lit lit | ::int [ int ] | ::rint [ ^ int ] | ::par ( re )
int ::= ::empty | ::lit lit | ::int lit - lit int
